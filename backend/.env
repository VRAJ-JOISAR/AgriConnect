PORT=5000
MONGODB_URI=mongodb://localhost:27017/agriconnect
JWT_SECRET=your-secret-key-replace-in-production-with-256-bit-key
JWT_REFRESH_SECRET=your-refresh-secret-key-replace-in-production
JWT_EXPIRES_IN=30d
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Security Settings
BCRYPT_SALT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCK_TIME=3600000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# File Upload Settings
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf

# Email Settings (for future implementation)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password